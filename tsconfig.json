{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "lib",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "types": ["reflect-metadata", "node", "jest"]
  },
  "include": [
    "src/*",
    "src/**/*.ts",
    "test/**/*.ts",
    "aws/**/*.ts",
    "aws/*.ts",
    "./serverless.ts",
    "webpack.config.js",
    "jest.config.js"
  ],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
